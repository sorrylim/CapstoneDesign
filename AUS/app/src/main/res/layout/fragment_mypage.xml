<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settingGray"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="80dp">

        <TextView
            android:id="@+id/text_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="개인정보수정"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="115dp" />


        <TextView
            android:id="@+id/text_device"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="기기설정"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_edit_profile" />

        <TextView
            android:id="@+id/text_logout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="로그아웃"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/text_device"
            tools:layout_editor_absoluteX="115dp" />

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="48dp"
            android:background="@color/settingGray"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-74dp" />

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="96dp"
            android:background="@color/settingGray"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-74dp" />

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="144dp"
            android:background="@color/settingGray"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-74dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_appinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/layout_account">

        <TextView
            android:id="@+id/text_appinfo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="앱 정보"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_appversion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="앱 버전"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/text_appinfo" />

        <TextView
            android:id="@+id/text_appversion_number"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingRight="16dp"
            android:text="1.0.0"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/text_appversion"
            app:layout_constraintTop_toBottomOf="@id/text_appinfo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>